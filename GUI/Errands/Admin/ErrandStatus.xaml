<Page x:Class="GUI.Errands.Admin.ErrandStatus"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Errands.Admin"
      xmlns:entitites="clr-namespace:Logic.Entities;assembly=Logic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ErrandStatus">

    <Page.Resources>
        <DataTemplate DataType="{x:Type entitites:Errand}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Issue}" FontWeight="Bold"/>
                <TextBlock Text="{Binding Description}"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <ListBox x:Name="Errands" HorizontalAlignment="Left" Height="260" Margin="213,79,0,0" VerticalAlignment="Top" Width="314"/>
        <Button x:Name="EndErrand" Content="Avsluta ärende" HorizontalAlignment="Left" Height="29" Margin="546,310,0,0" VerticalAlignment="Top" Width="109" Click="EndErrand_Click" />
        <TextBlock HorizontalAlignment="Left" Margin="213,43,0,0" Text="Aktuella ärenden" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Normal" Height="31" Width="314" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="16"/>

    </Grid>
</Page>
