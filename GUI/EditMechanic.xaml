<Page x:Class="GUI.EditMechanic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:entities="clr-namespace:Logic.Entities;assembly=Logic"
      xmlns:extToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditMechanic">

    <Page.Resources>
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        <DataTemplate DataType="{x:Type entities:Mechanic}"></DataTemplate>
    </Page.Resources>

    <Grid>
        <Label Content="Välj en mekaniker vars uppgifter du vill redigera" HorizontalAlignment="Left" Margin="29,22,0,0" VerticalAlignment="Top"/>
        <Button Content="Spara" Name ="SaveMechanic" Click="SaveMechanic_click" HorizontalAlignment="Left" Margin="615,295,0,0" VerticalAlignment="Top" Width="34"/>
        <ListView Margin="30,53,352,105" Name="AllMechanics" SelectionChanged="AllMechanics_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="65" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Efternamn" Width="65" DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="Födelsedatum" Width="85" DisplayMemberBinding="{Binding DateOfBirth}"/>
                    <GridViewColumn Header="Kompetenser" Width="85" DisplayMemberBinding="{Binding Skills}"/>
                    <GridViewColumn Header="Ärenden" Width="50" DisplayMemberBinding="{Binding NumberOfErrands}"/>
                    <GridViewColumn Header="Slutdatum" Width="85" DisplayMemberBinding="{Binding NumberOfErrands}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <extToolkit:WatermarkTextBox Watermark="Förnamn" Name="FirstName" HorizontalAlignment="Left" Margin="496,53,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="FirstName_TextChanged" ToolTip="Redigera mekanikerns förnamn här" MaxLines="1"/>
        <extToolkit:WatermarkTextBox Watermark="Efternamn" Name="LastName"  HorizontalAlignment="Left" Margin="496,115,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="LastName_TextChanged" ToolTip="Redigera mekanikerns efternamn här" MaxLines="1"/>
        <TextBox HorizontalAlignment="Left" Margin="496,166,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="496,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>

    </Grid>
</Page>
