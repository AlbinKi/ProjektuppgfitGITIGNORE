<Page x:Class="GUI.Admin.UserAndMechanic.RemoveUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:entities="clr-namespace:Logic.Entities;assembly=Logic"
      xmlns:local="clr-namespace:GUI.Admin.UserAndMechanic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RemoveUser">

    <Page.Resources>
        <DataTemplate DataType="{x:Type entities:User}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Username}"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <ListBox x:Name="RemoveList"  HorizontalAlignment="Left" Margin="250,138,0,0" VerticalAlignment="Top" MinHeight="20" MinWidth="150" />

        <Button Content="Ta bort" HorizontalAlignment="Left" Margin="476,208,0,0" VerticalAlignment="Top" Height="22" Width="116" Click="RemoveUser_Click"/>

    </Grid>
</Page>
